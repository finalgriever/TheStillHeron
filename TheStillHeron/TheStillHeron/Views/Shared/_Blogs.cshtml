@model TheStillHeron.Models.BlogsViewModel
<menu>
    <h3>Recent Entries</h3>
    <ul class="menu-list">
        @for (int i = 0; i < Model.Blogs.Length() && i < 15; i++)
        {
            <li>@Html.ActionLink(Model.Blogs[i].Title, "Index", "Blog", new { blogId=Model.Blogs[i].Id }, new {@class="blog-menu-item"})</li>
        }
    </ul>
</menu>